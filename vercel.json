{
  "builds": [
    { "src": "package.json", "use": "@vercel/static-build", "config": { "distDir": "build" } }
  ],
  "headers": [
    {
      "source": "/(.*)\\.json",
      "headers": [{ "key": "Content-Type", "value": "application/json; charset=utf-8" }]
    }
  ],
  "rewrites": [
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}
